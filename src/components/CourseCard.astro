---
import formatDate from "@/utils/formatDate";

type Props = {
  title: string;
  completedOn: Date;
  offeredBy: string;
  width: string;
};


const { title, completedOn, offeredBy, width} = Astro.props;
---

<div
  class="group flex cursor-pointer flex-col gap-2 w-[49%] rounded-xl border border-neutral-500 p-4 transition-all duration-200 hover:-translate-y-2 hover:border-neutral-200 hover:bg-slate-600 hover:bg-opacity-40 hover:text-neutral-100"
  >
  <div
    class=" flex w-full flex-col justify-between gap-2 md:flex-row md:items-center">
    <p class="text-neutral-100 text-lg">{title}</p>
  </div>
  <p>Completed on {formatDate(completedOn)}</p>
  <p>Offered by {offeredBy}</p>
</div>
